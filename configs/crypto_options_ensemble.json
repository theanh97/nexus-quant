{
  "_comment": "Crypto Options â€” VRP + Skew MR v2 Ensemble (Validated 2026-02-21)",
  "_version": "2.0.0",
  "_created": "2026-02-20",
  "_updated": "2026-02-21",
  "_project": "crypto_options",
  "_strategy": "ensemble_vrp_skew",
  "_description": "2-strategy ensemble: VRP (carry) + Skew MR v2 (mean-reversion). Near-zero correlation (r=0.014) provides true diversification.",

  "run_name": "crypto_options_ensemble_v2",
  "seed": 42,

  "data": {
    "provider": "deribit_rest_v1",
    "symbols": ["BTC", "ETH"],
    "start": "2020-01-01",
    "end": "2025-12-31",
    "bar_interval": "1d",
    "cache_dir": "data/cache/deribit",
    "use_synthetic_iv": true,
    "rv_lookback_bars": 21
  },

  "execution": {
    "style": "taker",
    "slippage_bps": 7.5,
    "spread_bps": 10.0,
    "impact": {
      "model": "sqrt",
      "coef_bps": 3.0
    }
  },

  "costs": {
    "maker_fee_rate": 0.0003,
    "taker_fee_rate": 0.0005,
    "cost_multiplier": 1.0
  },

  "strategies": [
    {
      "name": "crypto_vrp",
      "class": "VariancePremiumStrategy",
      "weight": 0.30,
      "params": {
        "base_leverage": 1.5,
        "exit_z_threshold": -3.0,
        "vrp_lookback": 30,
        "rebalance_freq": 5,
        "min_bars": 30
      },
      "_standalone_sharpe": 2.088,
      "_note": "Pure carry: always short vol, never exit. 320-combo sweep confirmed exit_z=-3.0 optimal."
    },
    {
      "name": "crypto_skew_v2",
      "class": "SkewTradeV2Strategy",
      "weight": 0.70,
      "params": {
        "skew_lookback": 60,
        "z_entry": 2.0,
        "z_exit": 0.0,
        "target_leverage": 1.0,
        "rebalance_freq": 5,
        "min_bars": 60,
        "use_vrp_filter": false
      },
      "engine": {
        "skew_sensitivity_mult": 2.5
      },
      "_standalone_sharpe": 1.744,
      "_note": "Vega-based skew MR. Fixed from v1 (Sharpe -2.9) via: (1) vega P&L model, (2) sign fix, (3) sensitivity calibration."
    }
  ],

  "ensemble": {
    "weights": {"crypto_vrp": 0.30, "crypto_skew_v2": 0.70},
    "_weight_note": "VRP=30% Skew=70% maximizes Sharpe due to near-zero correlation (r=0.014). All weight combos pass validation.",
    "_correlation": 0.014,
    "_wf_avg_sharpe": 2.615,
    "_wf_min_sharpe": 2.137,
    "_conservative_avg": 2.275,
    "_conservative_min": 1.853,
    "_yearly": {"2021": 2.49, "2022": 2.72, "2023": 3.08, "2024": 2.66, "2025": 2.14}
  },

  "term_structure": {
    "_status": "NOT_VALIDATED",
    "_best_sharpe": 0.465,
    "_note": "Term structure signal marginal (Sharpe < 0.5). Does not improve ensemble. Excluded."
  },

  "risk": {
    "max_drawdown": 0.20,
    "max_gross_leverage": 2.0,
    "max_position_per_symbol": 0.80
  },

  "validation": {
    "walk_forward": {
      "train_start": "2020-01-01",
      "train_end": "2022-12-31",
      "test_start": "2023-01-01",
      "test_end": "2024-12-31",
      "oos_start": "2025-01-01",
      "oos_end": "2025-12-31"
    },
    "pass_criteria": {
      "min_sharpe_oos": 0.5,
      "avg_sharpe": 1.0,
      "max_correlation_with_perps": 0.3
    }
  },

  "output": {
    "metrics_dir": "results/crypto_options",
    "equity_curve": true,
    "yearly_breakdown": true,
    "correlation_analysis": true
  }
}
