{
  "_comment": "Crypto Options — 25-Delta Skew Mean-Reversion v2 (Vega P&L Model)",
  "_version": "2.0.0",
  "_created": "2026-02-20",
  "_updated": "2026-02-21",
  "_project": "crypto_options",
  "_strategy": "crypto_skew_v2",
  "_description": "Fade extreme put/call skew via risk reversal. P&L from vega exposure to skew changes (not directional).",

  "run_name": "crypto_options_skew_v2",
  "seed": 42,

  "data": {
    "provider": "deribit_rest_v1",
    "symbols": ["BTC", "ETH"],
    "start": "2020-01-01",
    "end": "2025-12-31",
    "bar_interval": "1d",
    "cache_dir": "data/cache/deribit",
    "use_synthetic_iv": true,
    "rv_lookback_bars": 21
  },

  "execution": {
    "style": "taker",
    "slippage_bps": 7.5,
    "spread_bps": 10.0,
    "impact": {
      "model": "sqrt",
      "coef_bps": 3.0
    }
  },

  "costs": {
    "maker_fee_rate": 0.0003,
    "taker_fee_rate": 0.0005,
    "cost_multiplier": 1.0
  },

  "strategy": {
    "name": "crypto_skew_v2",
    "class": "SkewTradeV2Strategy",
    "params": {
      "skew_lookback": 60,
      "z_entry": 2.0,
      "z_exit": 0.0,
      "target_leverage": 1.0,
      "rebalance_freq": 5,
      "min_bars": 60,
      "use_vrp_filter": false,
      "_z_entry_note": "z=2.0 gives best avg Sharpe across all sensitivity levels",
      "_z_exit_note": "z_exit=0.0 means hold until full mean reversion (no early exit)"
    },
    "engine": {
      "skew_sensitivity_mult": 2.5,
      "_sensitivity_note": "Base formula iv*sqrt(dt)≈0.036 underestimates true risk reversal vega by ~2.5x. Real calibration: 25d RR vega ≈ 2*S*sqrt(T)*N'(d1)/S ≈ 0.09 per 1% skew."
    },
    "_validated": "2026-02-21",
    "_wf_avg_sharpe": 1.744,
    "_wf_min_sharpe": 0.949,
    "_conservative_avg": 1.300,
    "_conservative_min": 0.406,
    "_v1_failure": "v1 used delta-equivalent proxy (directional P&L). avg=-2.892. Fixed by: (1) vega-based P&L model, (2) correct sign convention, (3) proper sensitivity calibration."
  },

  "risk": {
    "max_drawdown": 0.20,
    "max_gross_leverage": 1.5,
    "max_position_per_symbol": 0.80
  },

  "validation": {
    "walk_forward": {
      "train_start": "2020-01-01",
      "train_end": "2022-12-31",
      "test_start": "2023-01-01",
      "test_end": "2024-12-31",
      "oos_start": "2025-01-01",
      "oos_end": "2025-12-31"
    },
    "pass_criteria": {
      "min_sharpe_oos": 0.5,
      "avg_sharpe": 1.0,
      "max_correlation_with_perps": 0.3
    }
  },

  "output": {
    "metrics_dir": "results/crypto_options",
    "equity_curve": true,
    "yearly_breakdown": true
  }
}
